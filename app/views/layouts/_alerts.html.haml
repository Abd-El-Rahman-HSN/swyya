- if flash.present?
  - flash.each do |key, message|
    %div{'aria-atomic' => 'true', 'aria-live' => 'polite'}
      .toast
        .toast-header{class: "bg-#{key}"}
          %strong.mr-auto
            = icon('fas', 'exclamation-circle', key.to_s.titleize)
          %small
            = time_ago(Time.now)
          %button.ml-2.mb-1.close{'aria-label': 'Close', 'data-dismiss': 'toast', type: 'button'}
            %span{'aria-hidden': 'true'} Ã—
        .toast-body
          = message

:javascript
  $(function () {
    $('.toast').toast({
      autohide: true,
      delay: 5000,
    })
    $('.toast').toast('show')
  })
