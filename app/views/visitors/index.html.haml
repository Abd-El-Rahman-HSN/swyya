      #heading-with-line.col-12
        %h5
          = t(:new_projects)
      .col-12
        .row
          = render partial: 'projects/partials/projects_list', locals: { projects: @newest_projects, targeted_col: 6 }

  .col-3
    .row
      #heading-with-line.col-12
        %h5
          = t(:most_liked_projects)
      .col-12
