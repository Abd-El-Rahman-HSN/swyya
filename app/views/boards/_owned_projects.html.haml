#heading-with-line
  %h5
    = t(:shared_projects)
.row
  - @owned_projects.each do |project|
    .col-12
      .card
        .card-body#custom-body
          %h5
            = link_to project.title, project, class: 'title'
          .row.text-left
            .col
              = link_to project.github_link, class: 'small icon-link' do
                = icon('fab', 'github', t(:repository), title: t(:repository))
            .col
              %span.small
                = icon('fas', 'heartbeat', title: t(:likes))
              %span.small#likes_counter
                = project.get_likes.size
            .col  
              %span.small
                = icon('fas', 'clock', time_ago(project.created_at), title: t(:adding_date))
            .col
              = link_to edit_project_path(project), class: 'small icon-link' do
                = icon('fas', 'edit', t(:edit))
            .col
              = link_to project_path(project), method: :delete, class: 'small icon-link', data: { confirm: t(:delete_confirmation) } do
                = icon('fas', 'trash', t(:delete))