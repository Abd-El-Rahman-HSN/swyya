#heading-with-line
  %h5
    = t(:shared_ideas)
.row
  - @owned_ideas.each do |idea|
    .col-6
      .card
        .card-body#custom-body
          .row
            .col-8
              %p
                = link_to idea.title, idea, class: 'title'
            .col-4.text-right
              = link_to edit_idea_path(idea), class: 'small icon-link' do
                = icon('fas', 'edit', title: t(:edit))
              = link_to idea_path(idea), method: :delete, class: 'small icon-link', data: { confirm: t(:delete_confirmation) } do
                = icon('fas', 'trash', title: t(:delete))