.row
  #heading-with-line.col-12
    %h5
      = t(:new_projects)
  .col-12
    .row
      - @newest_projects.each do |project|
        .col-3
          .card
            - if project.image_url.present?
              = image_tag(project.image_url, class: 'card-img-top')
            .card-body#custom-body
              %h5
                = link_to project.title, project, class: 'title'
              %p.card-text= project.description
              -# = link_to t(:repository), project.github_link, class: 'btn btn-secondary btn-sm', target: '_blank'